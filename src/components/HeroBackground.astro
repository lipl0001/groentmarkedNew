---
import { Image } from "astro:assets";
import Hero from "../assets/images/Hero.svg";
import BigButton from "./animationer/BigButton.astro";

const {
  title = "",
  text = "",
  textl = "",
  image = "",
  btext = "",
  link = "",
  bg = "",
  tsize = "",
} = Astro.props;
---

<section class={`w-full ${bg}`}>
  <Image src={Hero} alt="Green background" class="w-full" />
  <div class="w-full grid grid-cols-2 absolute top-0">
    <div class="relative mt-50 ml-10 w-5/6 max-h-<20>px">
      <h1 class={`font-display text-MarketLinen-500 ${tsize}`} "font-display text-white">
        {title}
      </h1>
      <p class="text-MarketLinen-500 max-h-[20px]" set:html={text} />
      <div class="text-MarketLinen-500" set:html={textl} />
      {btext && <BigButton link={link} text={btext} />}

      <div class="animate-bounce">
        <img
          class="flex place-self-end rotate-90"
          src="/src/assets/images/icons/Arrow.svg"
          alt=""
        />
      </div>
    </div>
    <img src={`/src/assets/images/${image}`} alt={image} class="w-full relative top-0 right-0" />
  </div>
</section>
