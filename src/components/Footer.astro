---
import { Image } from "astro:assets";
import Logo from "../assets/images/GM_logo.svg";
import IG from "../assets/images/icons/Instagram.svg";
import FB from "../assets/images/icons/Facebook.svg";
import Newsletter from "./Newsletter.astro";
import Bær from "src/assets/images/illustrationer/Bær.webp";
import Instagram from "./Instagram.astro";

const { ig = "" } = Astro.props;
---

<section class="relative z-4">
  <div class={`-mb-70 ${ig} sm:-mb-100`}>
    <Instagram />
  </div>
  <Image
    src={Bær}
    alt="Illustration af bær"
    class="h-40 sm:h-80 w-auto relative top-90 sm:top-130 lg:top-110 left-0 rotate-300"
  />
  <div
    class={`flex items-end bg-[url(/VektorFooter.svg)] bg-cover w-full h-380 sm:h-350 lg:h-250 min-h-screen z-5 overflow-hidden`}
  >
    <div class="w-full flex flex-col flex-wrap ml-10 z-1">
      <div class="w-1/2 flex justify-items-start mb-15 lg:mb-25">
        <Newsletter />
      </div>

      <div class="w-full flex justify-between flex-wrap pb-15 px-5 lg:px-10">
        <a href="/" class="hidden lg:block">
          <Image src={Logo} alt="Logo" />
        </a>

        <div class="flex gap-10 md:gap-20 flex-wrap">
          <div>
            <p class="text-MarketLinen-500 text-base font-bold pb-5">Genveje</p>
            <p class="pb-3 text-base text-MarketLinen-500">
              <a href="/stoet">Støt Grønt Marked</a>
            </p>
            <p class="pb-3 text-base text-MarketLinen-500"><a href="/kalender">Kalender</a></p>
            <p class="pb-3 text-base text-MarketLinen-500">
              <a href="/producent">Bliv producent</a>
            </p>
          </div>
          <div>
            <p class="text-MarketLinen-500 text-base font-bold pb-5">Sider</p>
            <p class="pb-3 text-base text-MarketLinen-500"><a href="/om-os">Om os</a></p>
            <p class="pb-3 text-base text-MarketLinen-500">
              <a href="#">Vilkår og betingelser </a>
            </p>
            <p class="pb-3 text-base text-MarketLinen-500"><a href="#">Ressourcer</a></p>
          </div>

          <div>
            <p class="text-MarketLinen-500 text-base font-bold pb-5">Kontakt</p>
            <p class="pb-3 text-base text-MarketLinen-500">
              <a href="mailto:hello@groentmarked.dk">hello@groentmarked.dk</a>
            </p>
          </div>
        </div>
        <div class="flex justify-items-end mb-48 lg:mb-10">
          <a class="self-center" href="https://www.instagram.com/groentmarked/" target="_blank">
            <Image src={IG} alt="Logo instagram" />
          </a>
          <a class="self-center" href="https://www.facebook.com/groentmarked" target="_blank">
            <Image src={FB} alt="Logo facebook" />
          </a>
        </div>
      </div>
    </div>
    <div class="lg:hidden w-full flex justify-center absolute bottom-0 mb-5">
      <a href="/" class="w-1/2 md:w-1/3">
        <Image src={Logo} alt="Logo" class="w-full" />
      </a>
    </div>
  </div>
</section>
