---
import { StickyScrollReveal } from "@/components/animationer/StickyScroll";
import MainLayout from "../layouts/MainLayout.astro";
import FAQ from "@/components/FAQ.astro";
import HeroBackground from "@/components/HeroBackground.astro";
import UdoverMarkederne from "@/components/UdoverMarkederne.astro";
import b1 from "src/assets/images/arrangementer/1.webp";
import Carrot from "src/assets/images/vector/Carrot.svg";
import Leaf from "src/assets/images/vector/Leaf.svg";
import Recycle from "src/assets/images/vector/Recycle.svg";
import HvorforIcons from "@/components/HvorforIcons.astro";
import Grøntsager from "src/assets/images/illustrationer/Grøntsager.webp";
import { Image } from "astro:assets";
---

<MainLayout title="Mere end et marked">
  <HeroBackground
    title="Arrangementer"
    text="Grønt Marked samler mennesker om <strong>kærligheden til ægte </strong>, <strong>lokal mad</strong> og <strong>ansvarlig produktion</strong>. Vi er en bevægelse, der hylder fællesskab, håndværk og sæsonens smag – både gennem vores søndagsmarkeder og Grønt Marked Køkken."
    image={b1}
  />
  <section class="layout relative">
    <Image
      src={Grøntsager}
      alt="Tegnet grøntsager"
      class="absolute top-[-100px] right-0 h-50 lg:h-80 w-auto"
    />
    <h2 class="mb-[24px] text-MarketMidnight-500">Hvad vi tilbyder</h2>
    <p class="mb-[24px] text-MarketMidnight-500">
      Dyk ned i oplevelsen hos Grønt Marked Køkken med vores private dining-oplevelser. Vores kokke
      tager dig med på en rejse gennem sæsonerne og viser, hvor meget smag der kan fremhæves med
      friske, lokale råvarer. Hver oplevelse vil give dig værdifulde tips og tricks til, hvordan du
      kan lave mere bæredygtig mad og spise efter sæsonen i din egen hverdag.
    </p>
  </section>

  <div class="flex flex-col justify-center">
    <StickyScrollReveal client:load />
    <UdoverMarkederne />

    <HvorforIcons
      title1="Lokale råvarer med omtanke"
      text1="Vi samarbejder med små, danske producenter og bruger kun sæsonens bedste råvarer – økologisk og bæredygtigt dyrket."
      title2="Mad med mening og smag"
      text2="Vores retter er lavet med respekt for råvarerne – og med kærlighed til god smag og ægte håndværk."
      title3="Støt en madbevægelse i balance"
      text3="Når du vælger os, støtter du et mere fair og ansvarligt fødevaresystem – og en grønnere fremtid."
      icon1={Carrot}
      icon2={Leaf}
      icon3={Recycle}
    />

    <FAQ />
  </div>
</MainLayout>
